<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ComboSelection">

    <Grid x:Name="ComboGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>


        <Button Name="Brontowurst" Grid.Column="0" Grid.Row="0" Click="Entree_Click">
            <StackPanel>
                <Image Source="/Assets/DinoDiner-01.png">
                </Image>
                <TextBlock> Brontowurst Combo</TextBlock>
            </StackPanel>
        </Button >
        <Button Name="DinoNuggets" Grid.Column="1" Grid.Row="0" Click="Entree_Click">
            <StackPanel>
                <Image Source="Assets/DinoDiner-02.png">
                </Image>
                <TextBlock>
                Dino-Nuggets Combo
                </TextBlock>
            </StackPanel>
        </Button>

        <Button Name="SteakosaurusBurger" Grid.Column="2" Grid.Row="0" Click="Entree_Click">
            <StackPanel>
                <Image Source="Assets/DinoDiner-05.png">
                </Image>
                <TextBlock>
                Steakosaurus Burger Combo
                </TextBlock>
            </StackPanel>
        </Button>

        <Button Name="TRexKingBurger" Grid.Column="0" Grid.Row="1" Click="Entree_Click">
            <StackPanel>
                <Image Source="Assets/DinoDiner-06.png">
                </Image>
                <TextBlock>
                T-Rex King Burger Combo
                </TextBlock>
            </StackPanel>
        </Button>

        <Button Name="PterodactylWings" Grid.Column="3" Grid.Row="0" Click="Entree_Click">
            <StackPanel>
                <Image Source="Assets/DinoDiner-04.png">
                </Image>
                <TextBlock>
                Pterodactyl Wings Combo
                </TextBlock>
            </StackPanel>
        </Button>

        <Button Name="PBJ" Grid.Column="1" Grid.Row="1" Click="Entree_Click">
            <StackPanel>
                <Image Source="Assets/DinoDiner-03.png">
                </Image>
                <TextBlock>
                    Prehistoric PB&amp;J Combo
                </TextBlock>
            </StackPanel>
        </Button>

        <Button Name="VelociWrap" Grid.Column="2" Grid.Row="1" Click="Entree_Click">
            <StackPanel>
                <Image Source="Assets/DinoDiner-07.png">
                </Image>
                <TextBlock>
                    Veloci-Wrap Combo
                </TextBlock>
            </StackPanel>
        </Button>


    </Grid>
</Page>
